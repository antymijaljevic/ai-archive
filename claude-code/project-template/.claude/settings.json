{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "model": "claude-sonnet-4-5-20250929",

  "permissions": {
    "allow": [
      "Bash(npm run test)",
      "Bash(npm run test:*)",
      "Bash(npm run lint)",
      "Bash(npm run format)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Read(package.json)",
      "Read(tsconfig.json)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/*secret*)",
      "Read(**/*credential*)",
      "Bash(rm -rf *)",
      "Bash(npm publish *)",
      "Bash(docker rm *)",
      "Bash(docker system prune *)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git push --force *)",
      "Bash(npm run deploy*)",
      "Bash(npm install *)",
      "Bash(npm uninstall *)",
      "Edit(package.json)",
      "Write(**/*.config.*)"
    ],
    "additionalDirectories": [],
    "defaultMode": "acceptEdits"
  },

  "env": {
    "NODE_ENV": "development"
  },

  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // empty' | grep -E '\\.(ts|tsx|js|jsx)$' | xargs -r npx prettier --write"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/protect-files.sh"
          }
        ]
      }
    ]
  },

  "attribution": {
    "commit": "\n\nCo-Authored-By: Claude Sonnet 4.5 <noreply@anthropic.com>",
    "pr": "ðŸ¤– Generated with [Claude Code](https://claude.com/claude-code)"
  },

  "outputStyle": "Explanatory",
  "spinnerTipsEnabled": true,
  "showTurnDuration": false,

  "enableAllProjectMcpServers": true,

  "sandbox": {
    "enabled": false
  }
}
